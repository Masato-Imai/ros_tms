<launch>

  <!-- frame name -->
  <arg name="global_frame" value="map1"/>
  <arg name="odom_frame"   value="odom1"/>
  <arg name="base_frame"   value="base_footprint1"/>

  <!-- map file -->
  <arg name="map_file" value="$(find tms_rc_rtkbot)/maps/ito_parking/map.yaml"/>

  <!-- RViz -->
  <node name="rviz" pkg="rviz" type="rviz" args="-d $(find tms_rc_rtkbot)/rviz_cfg.rviz" respawn="true"/>

<group ns="portable1">
  <!-- map server -->
  <node name="map_server" pkg="map_server" type="map_server" args="$(arg map_file)">
    <param name="frame_id" value="$(arg global_frame)"/>
  </node>

  <!-- static tf -->
  <node pkg="tf" type="static_transform_publisher" name="world_to_map"
    args="0 0 0 0 0 0 world_link $(arg global_frame) 100">
  </node>
  
  <node pkg="tf" type="static_transform_publisher" name="map_to_measured"
    args="0 0 0 0 0 0 $(arg global_frame) base_measured 100">
  </node>
</group>

<!-- nmea_serial_driver -->
<node pkg="nmea_navsat_driver" type="nmea_serial_driver" name="nmea_serial_driver" output="screen">
    <param name="port" value="/dev/ublox"/>
</node>

<!-- rtkgps_measured -->
<node pkg="tms_rc_rtkbot" type="rtkgps_measured" name="rtkgps_measured" output="screen">
    <!-- Frame, Topic -->
    <param name="map_frame_name" value="map"/>
    <param name="odom_frame_name" value="odom"/>
    <param name="out_topic_name" value="odometry/measured"/>
    <!-- GNSS -->
    <param name="origin_lat" value="33.598420"/>
    <param name="origin_lon" value="130.210932"/>
    <param name="angle_offset" value="0"/>
    <param name="scale_offset" value="1"/>
    <param name="sel_solutions" value="fix"/>
</node>

</launch>
